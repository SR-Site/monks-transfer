#!/bin/bash

function build_frontend(){
    changeDir ${FRONTEND_BUILDROOT}
    npmCommand install
    npmCommand install
    gruntCommand clean
    tsdCommand install
    gruntCommand ts
    gruntCommand sass
    gruntCommand postcss
    gruntCommand requirejs
    gruntCommand clean-build
    gruntCommand generate-block-documentation
    blockDocumentation ../block-documentation/
}

function build_backend(){
    changeDir ${BACKEND_BUILDROOT}
    runComposer install
    copyFileIfNotExists deploy/var/drupal-settings/example.settings.jenkins.php deploy/var/drupal-settings/settings.local.php
    changeDir ${DRUSH_DIR}    
    drushCommand cr
    drushCommand ctim
    drushCommand updb
    drushCommand update-entities
    drushCommand cr
}

function build_deploy(){
    echo "Todo"
}